<?xml version="1.0" encoding="UTF-8"?>
<project name="junit5-jupiter-starter-ant" default="build" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">

    <fail message="Ant 1.10.4+ is required!">
        <condition>
            <not>
                <antversion atleast="1.10.4" />
            </not>
        </condition>
    </fail>

    <path id="test.classpath">
        <pathelement path="test/bin" />
        <pathelement path="bin" />
        <fileset dir="lib" includes="*.jar" />
    </path>

    <target name="build" description="clean build" depends="clean, test, run" />

    <target name="clean">
        <delete dir="bin" />
        <delete dir="test/bin" />
        <delete dir="test-report" />
    </target>

    <target name="init">
        <mkdir dir="lib" />
        <mkdir dir="bin" />
        <mkdir dir="test/bin" />
        <mkdir dir="test-report" />
    </target>

    <target name="resolve" depends="init" description="Download Jar files">
        <ivy:retrieve />
    </target>

    <target name="compile" depends="resolve">
        <javac destdir="bin" srcdir="src" includeantruntime="false" />
        <javac destdir="test/bin" classpathref="test.classpath" srcdir="test" includeantruntime="false" />
    </target>

    <!-- https://junit.org/junit5/docs/snapshot/user-guide/#running-tests-build-ant -->
    <target name="test.junit.launcher" depends="compile">
        <junitlauncher haltOnFailure="true" printSummary="true">
            <classpath refid="test.classpath" />
            <testclasses outputdir="test-report">
                <fileset dir="test/bin">
                    <include name="**/*Test.class" />
                </fileset>
                <listener type="legacy-xml" sendSysOut="true" sendSysErr="true" />
                <listener type="legacy-plain" sendSysOut="true" />
            </testclasses>
        </junitlauncher>
    </target>

    <!-- https://junit.org/junit5/docs/current/user-guide/#running-tests-console-launcher -->
    <target name="test.console.launcher" depends="compile">
        <java classpathref="test.classpath" classname="org.junit.platform.console.ConsoleLauncher" fork="true" failonerror="true">
            <arg value="--scan-classpath" />
            <arg line="--reports-dir test-report" />
        </java>
        <junitreport todir="test-report">
            <fileset dir="test-report">
                <include name="TEST-*.xml" />
            </fileset>
            <report format="frames" todir="test-report/html" />
        </junitreport>
    </target>

    <target name="test" depends="test.junit.launcher, test.console.launcher" />

    <target name="run" depends="compile">
        <java classname="edu.umb.cs680.hw00.Calculator"
            classpathref="test.classpath"
            fork="true" />
        <java classname="edu.umb.cs680.hw01.PrimeGenerator"
            classpathref="test.classpath"
            fork="true" />
    </target>
</project>